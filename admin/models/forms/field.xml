<?xml version="1.0" encoding="utf-8" ?>
<form addrulepath="/administrator/components/com_qatdatabase/models/rules">
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		
		<field
			name="names"
			type="hidden"
			multiple="true"
		/>
		
		<field
			name="values"
			type="hidden"
			multiple="true"
		/>
		
		<field
			name="parameters"
			type="hidden"
			multiple="true"
		/>
		
		<field
			name="max_file_size"
			type="hidden"
			multiple="true"
		/>
		
		<field
			name="max_length"
			type="hidden"
		/>
		
		<field
			name="rows"
			type="hidden"
		/>
		
		<field
			name="cols"
			type="hidden"
		/>
		
		<field
			id="title"
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="input-xxlarge input-large-text"
			size="60"
			required="true"
		/>
		
		<field
			name="name"
			type="text"
			label="COM_QATDATABASE_FIELD_NAME"
			description="COM_QATDATABASE_FIELD_NAME_DESC"
			default="fld_"
			class="inputbox"
			required="true"
		/>
		
		<field
			name="required"
			type="radio"
			label="COM_QATDATABASE_FIELD_REQUIRED"
			description="COM_QATDATABASE_FIELD_REQUIRED"
			default="1"
			class="btn-group btn-group-yesno"
			required="true"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field
			name="editable"
			type="radio"
			label="COM_QATDATABASE_FIELD_EDITABLE"
			description="COM_QATDATABASE_FIELD_EDITABLE"
			default="1"
			class="btn-group btn-group-yesno"
			required="true"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field
			name="labellink"
			type="url"
			validate="url"
			label="COM_QATDATABASE_FIELD_LABEL_LINK"
			description="COM_QATDATABASE_FIELD_LABEL_LINK"
			class="inputbox"
		/>
		
		<field
			name="description"
			type="text"
			label="COM_QATDATABASE_FIELD_DESCRIPTION"
			description="COM_QATDATABASE_FIELD_DESCRIPTION"
			class="inputbox"
		/>
		
		<field
			name="type"
			type="list"
			label="COM_QATDATABASE_FIELD_TYPE"
			description="COM_QATDATABASE_FIELD_TYPE_DESC"
			class="inputbox"
			required="true"
			onchange="javascript: GetParams(this.value);"
		>
			<option value="">COM_QATDATABASE_FIELD_SELECT_TYPE</option>
			<option value="1">Check Box (Multiple)</option>
			<option value="2">Check Box (Single)</option>
			<option value="3">Date</option>
			<option value="4">Drop Down (Multiple Selection)</option>
			<option value="5">Drop Down (Single Selection)</option>
			<option value="6">Email address</option>
			<option value="7">Number text</option>
			<option value="8">Price field</option>
			<option value="9">Text area or editor</option>
			<option value="10">Text Field</option>
			<option value="11">URL (Link)</option>
			<option value="12">Radio</option>
			<option value="13">File</option>
		</field>
		
		<field
			name="catid"
			type="category"
			multiple="true"
			extension="com_qatdatabase"
			class="inputbox"
			default=""
			label="COM_QATDATABASE_FIELD_CATEGORY"
			description="COM_QATDATABASE_FIELD_CATEGORY_DESC"
			required="true">
			<option value="-1">JOPTION_ALL_CATEGORIES</option>
		</field>
			
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
		<field
			name="publish_up"
			type="calendar"
			label="COM_QATDATABASE_FIELD_PUBLISH_UP"
			description="COM_QATDATABASE_FIELD_PUBLISH_UP"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
		
		<field
			name="publish_down"
			type="calendar"
			label="COM_QATDATABASE_FIELD_PUBLISH_DOWN"
			description="COM_QATDATABASE_FIELD_PUBLISH_DOWN"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
		
		<field
			name="created"
			type="calendar"
			label="COM_QATDATABASE_FIELD_CREATION_DATE"
			description="COM_QATDATABASE_FIELD_CREATION_DATE"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
	</fieldset>
</form>
